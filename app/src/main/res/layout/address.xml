<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/log"
    tools:context="com.example.my.mqttonenet.address">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">
            <ListView
                android:id="@+id/listview"
                android:layout_width="450dp"
                android:layout_height="450dp"
                android:visibility="visible">

            </ListView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_date"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#5555"
                android:textSize="20dp"
                android:onClick="tmchoose_Click"
                android:text="日期" />

            <Button
                android:id="@+id/button_fresh"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="#5555"
                android:gravity="center"
                android:textSize="20dp"

                android:onClick="fresh_Click"
                android:text="刷新" />

            <Button
                android:id="@+id/button_jump"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="#5555"
                android:gravity="center"
                android:textSize="20dp"

                android:onClick="jump_Click"
                android:text="图表显示" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
